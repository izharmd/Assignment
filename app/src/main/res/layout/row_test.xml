<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".8">

        <TextView
            android:id="@+id/txtTestedOfDate"
            style="@style/textView"
            android:text="Tested as of" />

        <TextView
            android:id="@+id/txtDailyRTPCR"
            style="@style/textView"
            android:text="Daily RTPCR sample collected" />

        <TextView
            android:id="@+id/txtSamReporToday"
            style="@style/textView"
            android:text="Sample reported today : " />

        <TextView
            android:id="@+id/txtTotalDoese"
            style="@style/textView"
            android:text="Total doses administreted : " />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:textColor="@color/black"
                android:text="Source : "
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:id="@+id/txtSource"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:textColor="@color/black"
                android:text="Click to View"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/rating_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".2"
        android:src="@drawable/star_border" />

</LinearLayout>